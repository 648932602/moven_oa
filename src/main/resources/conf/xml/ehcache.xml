<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
	<!-- 本地缓存路径 -->
	<diskStore path="e:\\ehcache\\tmpdir" />
	<!-- 默认缓存配置,默认存活7天 -->
	<defaultCache 
		maxElementsInMemory="1000" 
		eternal="false"
		timeToIdleSeconds="604800" 
		timeToLiveSeconds="604800"
		overflowToDisk="false" />
	<!-- 系统缓存配置,默认存活7天 -->
	<cache
		name="commonCache"
		maxElementsInMemory="1000"
		eternal="false"
		timeToIdleSeconds="604800" 
		timeToLiveSeconds="604800"
		overflowToDisk="false" />
</ehcache>